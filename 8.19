#include <stdio.h>
#include <string.h>
#include <ctype.h>


#define SIZE 80



int main()
{
    char text[ ][ SIZE ] = { 0 };
    int numLines;
    char search;
    char *searchPtr;
	char charCount[ 2 ][ 26 ];
	
    
    // Input lines of text until EOF, store in array text
    printf( "Please write several lines of text. EOF to end input." );
    
    int charText = 0;  // counter for characters
    int lineText = 0;  // counter for lines
    text[ charText ][ lineText ] = getchar();
    text[ charText ][ lineText ] = toupper( text[ charText ][ lineText ] );
    
    while ( text[ charText ][ lineText ] != EOF ) {
        if ( text[ charText ][ lineText ] == '\n' ) { // if char is newline, reset charText, increment lineText and get next char
            charText = 0;
            text[ charText ][ ++lineText ] = getchar();
        } else {										// for any other char, increment charText and get next char
            text[ ++charText ][ lineText ] = getchar();
            text[ charText ][ lineText ] = toupper( text[ charText ][ lineText ] );		// make all chars upper case for easier counting
		}
	}

		   
	// start counting the letters
	// step through each char in the string
	charText = 0;
	lineText = 0;

	while ( text[ charText ][ lineText ] != EOF ) {
		if ( text[ charText ][ lineText ] == '\n' ) { // if char is newline, reset charText and increment lineText 
            charText = 0;
            ++lineText;
        } else {
			for ( int i = 0; i <= 26; i++ ) {
				searchPtr = strchr( text, charCount[ 0 ][ i ] );	// strchr returns pointer to the char
				charCount[ 1 ][ searchPtr ]++;		// increment the count in charCount [ searchPtr ]
			}
		charText++;
		}
	}
	
	// print a table with a count of the letters, maybe don't print letters that are unused?
	printf( "\n\nHere is the letter count!\n\n");
	for ( i = 0; i <= 26; i++ ) {
		printf( "%c : %c \n", charCount[ 0 ][ i ], charCount[ 1 ][ i ] );
	}
	




}
