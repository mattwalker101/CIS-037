/* Homework 12.9
 * Matthew Walker, Windows VS2012
 * Create a linked list of 10 characters
 * Create a copy in reverse order
 */

#include <stdio.h>
#include <stdlib.h>
#include <time.h>

struct node {
	char data;
	struct node *link;
};
static struct node *first = NULL;


static void printList() 
{
	struct node *curNode = first;
	printf( "\n==================\n" );
	while ( curNode != NULL ) {
		printf( " %c ", curNode->data );
		curNode = curNode->link;
	}
}

void reverse()
{
	struct node *curNode = first, *nextNode;
	first = NULL;

	while ( curNode != NULL ) {
		nextNode = curNode->link;

		curNode->link = first;
		first = curNode;

		curNode = nextNode;
	}
}

int main( void )
{
	int i;
	struct node *newnode;

	srand( time( NULL ) );

	for ( i = 0; i < 10; i++ ) {
		newnode = (struct listNode *)malloc( sizeof( struct node ) );
		newnode->data = 65 + rand() % 26;
		newnode->link = first;
		first = newnode;
	}

	printList();
	
	reverse();
	printList();

	printf( "\n==================\n" );

	return 0;
}
